<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('./partials/head') %>
        <title>Home Page</title>
        <style>
            .btn {
                background-color: rgb(247, 182, 159);
            }

            .btn:hover {
                background-color: rgb(250, 133, 90);
            }

            @keyframes fadeInUp {
                from {
                    opacity: 0;
                    transform: translateY(20px);
                }

                to {
                    opacity: 1;
                    transform: translateY(0);
                }
            }

            .animate-card {
                opacity: 0;
                animation: fadeInUp 1s ease-in-out forwards;
                animation-delay: 0.2s;
            }
        </style>

</head>

<body>
    <%- include('./partials/nav') %>
        <h1 class="text-center mb-5" style="color: #000000; font-weight: bold;padding-top: 80px;">Explore Our Job
            Services</h1>
        <div class="container d-flex justify-content-center mt-5" style="">

            <div class="row  g-4 justify-content-center">
                <% matchedData.forEach(serviceCompany=> { %>
                    <div class="col d-flex justify-content-center">

                        <div class="card animate-card" style="padding: 5px 5px;animation-delay: 0.2s;">
                            <div style="width: 250px; height: 250px; overflow: hidden;">
                                <img src="<%= serviceCompany.company.profileImage %>" class="card-img-top img-fluid"
                                    style="object-fit: cover; width: 100%; height: 100%;" alt="...">
                            </div>
                            <div class="card-body">
                                <h5 class="card-title" style="text-align: center;">
                                    <%= serviceCompany.company.fullName %>
                                </h5>
                                <p style="text-align: center;"><%= serviceCompany.service.serviceType %></p>
                            </div>
                            <a href="/user/<%= serviceCompany.company._id %>?serviceType=<%= serviceCompany.service.serviceType %>"
                                class="btn view-btn" style="display: inline-block;width: auto;">View More</a>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>

        <%- include('./partials/footer') %>

            <%- include('./partials/scripts') %>
</body>

</html>